grammar org.svlang.v0.V0 with org.eclipse.xtext.common.Terminals

generate v0 "http://www.svlang.org/v0/V0"

Domainmodel:
	(elements += RootElement)*
;

RootElement:
	(main = Main)
	(funs += Fun)*
;

Main:
	'main {'
		(expressions += Expression)*
	'}'
;

Fun:
	'fun ' name=ID ':' retType=ID ' {'
		(expressions += Expression)*
	'}'
;

Expression:
	Assignment | FunCall // | Return
;

Assignment:
	name = ID ' = ' value = Passable
;

FunCall:
	name=ID '(' (parameters += Passable)* ')'
;

Passable:
	INT
	//FunCall | INT | STRING | ID
;

Return:
	'return ' Passable
;

