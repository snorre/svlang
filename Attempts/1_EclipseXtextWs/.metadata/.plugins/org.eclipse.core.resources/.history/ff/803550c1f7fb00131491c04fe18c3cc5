grammar org.svlang.v0.V0 with org.eclipse.xtext.common.Terminals

generate v0 "http://www.svlang.org/v0/V0"

Domainmodel:
	(elements += Element)*
;

AbstractElement:
	Main | MethodLine
;

Element:
	Main | Fun
;

Main:
	'main {' 
		{Main} (lines += MethodLine)* 
	'}'
;

Fun:
	'fun {'
		{Fun} (lines += MethodLine)*
	'}'
;

MethodLine:
	Assignment
;

Assignment:
	name=ID ' = ' [Fun|STRING|INT]
;