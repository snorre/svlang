grammar org.svlang.v0.V0 with org.eclipse.xtext.common.Terminals

generate v0 "http://www.svlang.org/v0/V0"

Domainmodel:
	(elements += RootElement)*
;

RootElement:
	Main | Fun
;

PackageDeclaration:
  'package' name = QualifiedName '{'
    (elements += AbstractElement)*
  '}'
;

QualifiedName:
  ID ('.' ID)*
;

Import:
  'import' importedNamespace = QualifiedNameWithWildcard
;
  
QualifiedNameWithWildcard:
  QualifiedName '.*'?
;
  

Main:
	'main {' 
		{Main} (expressions += Expression)* 
	'}'
;

Fun:
	'fun ' name=ID ':' retType=ID ' {'
		(expressions += Expression)*
	'}'
;

Expression:
	Assignment | FunCall | Return
;

Assignment:
	name = ID ' = ' value = Passable
;

FunCall:
	name=ID '(' (parameters += Passable)* ')'
;

Passable:
	Constants | ID | FunCall
;

Constants:
	INT | STRING
;

Return:
	'return ' Passable
;

