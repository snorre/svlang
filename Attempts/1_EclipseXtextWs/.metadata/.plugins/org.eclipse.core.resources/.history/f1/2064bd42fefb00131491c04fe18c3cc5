grammar org.svlang.v0.V0 with org.eclipse.xtext.common.Terminals

generate v0 "http://www.svlang.org/v0/V0"

Domainmodel:
	(elements += RootElement)*
;

RootElement:
	Main | Fun
;

Main:
	'main {' 
		{Main} (expressions += Expression)* 
	'}'
;

Fun:
	'fun {'
		{Fun} (expressions += Expression)*
	'}'
;

Expression:
	Assignment | FunCall
;

Assignment:
	name = ID ' = ' value = Passable
;

FunCall:
	name=ID '(' (parameters += Passable)* ')'
;

Passable:
	Constants | ID | Fun
;

Constants:
	INT | STRING
;

